<%- include('partials/head') %>

    <main
      class="flex flex-col items-center justify-center px-6 py-8 mx-auto h-screen lg:py-0"
    >
      <div
        class="w-full rounded-lg shadow md:mt-0 sm:max-w-md xl:p-0 bg-neutral-800"
      >
        <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
          <h1
            class="text-xl font-bold leading-tight tracking-tight md:text-2xl text-neutral-50"
          >
            Maak een account
          </h1>
          <form class="space-y-4 md:space-y-6" action="/register" method="post">
            <label
              for="email"
              class="block mb-2 text-sm font-medium text-neutral-50"
              >Je email</label
            >
            <input
              type="email"
              name="email"
              id="email"
              class="border sm:text-sm rounded-lg block w-full p-2.5 bg-neutral-700 border-neutral-600 placeholder-neutral-400 text-neutral-50 focus:ring-blue-500 focus:border-blue-500"
              placeholder="naam@bedrijf.be"
              required=""
            />
            <label
              for="password"
              class="block mb-2 text-sm font-medium text-neutral-50"
              >Wachtwoord</label
            >
            <input
              type="password"
              name="password"
              id="password"
              placeholder="••••••••"
              class="border sm:text-sm rounded-lg block w-full p-2.5 bg-neutral-700 border-neutral-600 placeholder-neutral-400 text-neutral-50 focus:ring-blue-500 focus:border-blue-500"
              required=""
            />
            <label
              for="confirm-password"
              class="block mb-2 text-sm font-medium text-neutral-50"
              >Bevestig wachtwoord</label
            >
            <input
              type="password"
              name="confirm"
              id="confirm"
              placeholder="••••••••"
              class="border sm:text-sm rounded-lg block w-full p-2.5 bg-neutral-700 border-neutral-600 placeholder-neutral-400 text-neutral-50 focus:ring-blue-500 focus:border-blue-500"
              required=""
            />
            <section class="flex items-center h-5">
              <input
                id="terms"
                aria-describedby="terms"
                type="checkbox"
                class="w-4 h-4 border rounded focus:ring-3 bg-neutral-700 border-neutral-600 focus:ring-blue-600 ring-offset-neutral-800"
                required=""
              />
              <label
                for="terms"
                class="ml-3 text-base font-light text-neutral-300"
                >Ik aanvaard de
                <a class="font-medium hover:underline text-blue-500" href="#"
                  >voorwaarden</a
                ></label
              >
            </section>
            <button
              type="submit"
              class="w-full text-neutral-50 focus:ring-4 focus:outline-none font-medium rounded-lg text-sm px-5 py-2.5 text-center bg-blue-600 hover:bg-blue-700 focus:ring-blue-800"
            >
              Maak account aan
            </button>
            <p class="text-base font-normal text-neutral-50">
              Al een account?
              <a
                href="login.html"
                class="font-medium hover:underline text-blue-500"
                >Hier inloggen</a
              >
            </p>
          </form>
        </div>
      </div>
    </main>
  </body>
</html>
