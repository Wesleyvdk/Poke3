<%- include("partials/head") %>
<%- include("partials/nav") %>
<% const typeColors={ bug: 'bg-[#A8B820]' , dark: 'bg-[#705848]' , dragon: 'bg-[#7038F8]' ,
                  electric: 'bg-[#F8D030]' , fairy: 'bg-[#F0B6BC]' , fighting: 'bg-[#C03028]' , fire: 'bg-[#F08030]' ,
                  flying: 'bg-[#A890F0]' , ghost: 'bg-[#705898]' , grass: 'bg-[#78C850]' , ground:'bg-[#E0C068]',
                  ice: 'bg-[#98D8D8]' , normal: 'bg-[#A8A878]' , poison: 'bg-[#A040A0]' , psychic: 'bg-[#F85888]' ,
                  rock: 'bg-[#B8A038]' , steel: 'bg-[#B8B8D0]' , water: 'bg-[#6890F0]' }; %>
<main class="flex flex-col gap-16 max-w-[1864px] mx-auto px-8">
  <div class="flex flex-col justify-start items-center text-start w-full">
    <h1 class="font-bold text-7xl flex flex-row justify-start items-start w-full text-transform capitalize"><%= pokemon.name %> <span class="font-semibold text-4xl ml-6 mt-5 text-neutral-300 z-0 text-black-400">#<%= String(pokemon.order).padStart(4, '0') %></span></h1>
    <div class="flex flex-row items-center justify-start gap-4 w-full">
      <% pokemon.types.forEach(type=> { %>
      <% const colorClass=typeColors[type.type.name] || 'bg-green-500' ; %>
      <span class="mt-4 inline-flex items-center justify-center leading-[100%] font-semibold rounded-full shadow py-1.5 px-6 <%= colorClass %>">
        <%= type.type.name %>
      </span>
      <% }) %>
    </div>
    <div class="relative">
      <% const colorClass=typeColors[pokemon.types[0].type.name] || 'bg-green-500' ; %>
      <div class="absolute inset-0 <%= colorClass %>/35 mix-blend-multiply filter blur-lg rounded-full"></div>
      <img class="relative w-96 h-96 z-10 object-cover" src="<%=pokemon.sprites.other['official-artwork']["front_default"]%>" alt=<%= pokemon.name %>>
    </div>
    <h2 class="font-bold text-3xl w-full">Evoluties</h2>
    <div class="relative grid grid-cols-3 items-center justify-center w-full my-6">
      <div class="absolute w-[90%] mx-auto inset-y-0 left-1/2 transform bottom-1/2 -translate-y-8 -translate-x-1/2 border-dotted border-b-8 border-gray-400 z-0"></div>
      <% evolutionPokemons.forEach(evolutionPokemon => { %>
      <a href="/pokemon/pokedex/<%= evolutionPokemon.name %>" class="flex flex-col justify-center items-center">
        <img class="w-48 rounded-full border-4 p-3 mx-auto  z-40 <%= evolutionPokemon.name == pokemon.name ? 'border-green-500 bg-green-100' : 'bg-neutral-100 grayscale' %> " src="<%=evolutionPokemon.sprites.other['official-artwork']["front_default"]%>" alt=<%= evolutionPokemon.name %>>
        <h1 class="font-semibold text-xl text-center w-full"><%= evolutionPokemon.name %><span class="font-semibold text-lg ml-2 mt-1 text-neutral-300 z-0 text-black-400">#<%= String(evolutionPokemon.order).padStart(4, '0') %></span></h1>
        <div class="flex flex-row items-center justify-center gap-2 w-full">
          <% evolutionPokemon.types.forEach(type=> { %>
          <% const colorClass=typeColors[type.type.name] || 'bg-green-500' ; %>
          <span class="mt-4 inline-flex items-center justify-center leading-[100%] font-semibold rounded-full shadow py-1.5 px-6 <%= evolutionPokemon.name == pokemon.name ? colorClass : 'bg-neutral-200' %>">
            <%= type.type.name %>
          </span>
          <% }) %>
        </div>
      </a>
      <% }) %>
    </div>
  </div>
  <div class="flex flex-col justify-start items-start text-left w-full mt-10">
    <h2 class="font-bold text-3xl w-full">Specificaties</h2>
    <div class="grid grid-cols-3 gap-4 mt-8">
      <article class="flex flex-col items-center justify-center gap-4 rounded-lg aspect-square w-32 bg-white shadow-md">
        <h2 class="font-bold text-2xl">Height</h2>
        <p class="font-semibold text-lg text-neutral-600"><%= pokemon.height/10%> m</p>
      </article>
      <article class="flex flex-col items-center justify-center gap-4 rounded-lg aspect-square w-32 bg-white shadow-md">
        <h2 class="font-bold text-2xl">Weight</h2>
        <p class="font-semibold text-lg text-neutral-600"><%= pokemon.weight/10%> kg</p>
      </article>
      <article class="flex flex-col items-center justify-center gap-4 rounded-lg aspect-square w-32 bg-white shadow-md">
        <h2 class="font-bold text-2xl">Abilities</h2>
        <% pokemon.abilities.forEach(ability => { %>
        <% if (!ability.is_hidden) { %>
        <p class="font-semibold text-lg text-neutral-600"><%= ability.ability.name %></p>
        <% } %>
        <% }) %>

      </article>
    </div>
    <h2 class="font-bold text-3xl w-full mb-4 mt-14">Statistieken</h2>
    <div class="grid grid-cols-3 grid-rows-6 w-full justify-center items-center gap-4 gap-x-6" style="grid-template-columns: auto auto 1fr;">
      <% pokemon.stats.forEach(stats => { %>
      <h1 class="font-normal text-neutral-400 text-2xl text-transform capitalize"><%= stats.stat.name %></h1>
      <h1 class="font-normal text-2xl"><%= stats.base_stat %></h1>
      <div class="w-full bg-gray-200 rounded-full h-2.5 dark:bg-gray-700">
        <% const colorClass=typeColors[pokemon.types[0].type.name] || 'bg-green-500' ; %>
        <div class="<%= colorClass %> h-2.5 rounded-full w-[<%= stats.base_stat %>%]"></div>
      </div>
      <% }) %>
    </div>
  </div>
  </div>
</main>
</body>

</html>